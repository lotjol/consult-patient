.coupon-container {
  min-height: 400rpx;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #fff;
  padding: 10rpx 30rpx 40rpx;
}
.coupon-container .coupon-header {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  position: relative;
}
.coupon-container .uni-icons-close {
  position: absolute;
  top: 2rpx;
  right: 0;
}
.coupon-container .coupon-list {
  margin-bottom: 40rpx;
}
.coupon-container .coupon-list-item {
  position: relative;
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #6f6f6f;
}
.coupon-container .uni-radio {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.coupon-container .uni-radio-input,
.coupon-container radio {
  transform: scale(0.9);
  margin-top: -1rpx;
}
.coupon-container .coupon-content {
  display: flex;
}
.coupon-container .coupon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 240rpx;
  height: 180rpx;
  color: #fff;
  background-image: linear-gradient(135deg, #76d6bf 0%, #3cc3a3 100%);
  position: relative;
}
.coupon-container .coupon::after {
  content: "";
  position: absolute;
  top: 50%;
  left: -15rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #fff;
  transform: translateY(-50%);
}
.coupon-container .value {
  font-size: 50rpx;
}
.coupon-container .symbol {
  font-size: 80%;
  margin-right: 6rpx;
}
.coupon-container .condition {
  font-size: 30rpx;
}
.coupon-container .description {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 6rpx 0;
  margin-left: 30rpx;
  font-size: 26rpx;
  color: #c3c3c5;
}
.coupon-container .description .title {
  display: block;
  font-size: 32rpx;
  color: #121826;
}